{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable", "es2020.intl"],
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "./distTs",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/.jest-cache",
    "**/dist",
    "**/.webpack",
    "**/.cache",
    "**/cache",
    "**/public",
    "**/docs-build",
    "**/.idea",
    "**/prettier",
    "**/dist-storybook",
    "**/.docusuarus",
    "**/.next",
    "**/coverage",
    "**/.eslintcache",
    "**/build-server",
    "**/.docusuarus",
    "**/yarn-error.log",
    "**/turbo-build.log",
    "**/.turbo",
    "*.log",
    "*.swp",
    "*.tmp"
  ]
}
